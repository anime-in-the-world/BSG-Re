<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox stylesheets="@../css/auth.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.birdsenger.controllers.ForgotPasswordController">

    <!-- Left Side - Form -->
    <VBox alignment="TOP_LEFT" prefWidth="650" spacing="20" styleClass="auth-left">
        <padding>
            <Insets bottom="60" left="80" right="80" top="60" />
        </padding>

        <!-- Logo -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <VBox prefHeight="40" prefWidth="40" styleClass="logo-circle" />
            <Label styleClass="logo-text" text="BirdSenger app." />
        </HBox>

        <Region VBox.vgrow="SOMETIMES" />

        <!-- Title -->
        <VBox spacing="12">
            <Text styleClass="auth-title" text="Reset your password" />
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label styleClass="auth-subtitle" text="Sign in to your account!" />
                <Hyperlink fx:id="loginLink" onAction="#handleLogin" styleClass="auth-link" text="Log in" />
            </HBox>
        </VBox>

        <!-- Form Fields -->
        <VBox spacing="20" styleClass="form-container">
            <!-- Username -->
            <VBox spacing="8">
                <Label styleClass="field-label" text="Username" />
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="auth-field" />
            </VBox>

            <!-- Security Question -->
            <VBox spacing="8">
                <Label styleClass="field-label" text="Security Question" />
                <Label fx:id="securityQuestionLabel" style="-fx-text-fill: #1F2937; -fx-font-size: 14px; -fx-padding: 10 0;" text="Where was your first honeymoon?" />
            </VBox>

            <!-- Answer -->
            <VBox spacing="8">
                <Label styleClass="field-label" text="Answer" />
                <TextField fx:id="answerField" promptText="Kyoto, Japan" styleClass="auth-field" />
            </VBox>

            <!-- New Password -->
            <VBox spacing="8">
                <Label styleClass="field-label" text="New Password" />
                <PasswordField fx:id="newPasswordField" promptText="Enter your password" styleClass="auth-field" />
            </VBox>

            <!-- Message Label -->
            <Label fx:id="messageLabel" managed="false" styleClass="success-label" text="Password Reset Successful" visible="false" />

            <!-- Confirm Button -->
            <Button fx:id="confirmButton" maxWidth="Infinity" onAction="#handleConfirm" styleClass="auth-button" text="Confirm" />
        </VBox>

        <Region VBox.vgrow="SOMETIMES" />
    </VBox>

    <!-- Right Side - Background Image -->
    <StackPane styleClass="auth-right" HBox.hgrow="ALWAYS" />

</HBox>
