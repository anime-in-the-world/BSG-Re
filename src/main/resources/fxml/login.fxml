<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox stylesheets="@../css/auth.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.birdsenger.controllers.LoginController">

    <!-- Left Side - Form -->
    <VBox alignment="TOP_LEFT" prefWidth="650" spacing="20" styleClass="auth-left">
        <padding>
            <Insets bottom="60" left="80" right="80" top="60" />
        </padding>

        <!-- Logo -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <VBox prefHeight="40" prefWidth="40" styleClass="logo-circle" />
            <Label styleClass="logo-text" text="BirdSenger app." />
        </HBox>

        <Region VBox.vgrow="SOMETIMES" />

        <!-- Sign In Title -->
        <VBox spacing="12">
            <Text styleClass="auth-title" text="Sign In" />
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label styleClass="auth-subtitle" text="Don't have an account?" />
                <Hyperlink fx:id="createAccountLink" onAction="#handleCreateAccount" styleClass="auth-link" text="Create Account" />
            </HBox>
        </VBox>

        <!-- Form Fields -->
        <VBox spacing="20" styleClass="form-container">
            <!-- Username Field -->
            <VBox spacing="8">
                <Label styleClass="field-label" text="Email or Username" />
                <TextField fx:id="usernameField" promptText="Enter your email or username" styleClass="auth-field" />
            </VBox>

            <!-- Password Field -->
            <VBox spacing="8">
                <Label styleClass="field-label" text="Password" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="auth-field" />
            </VBox>

            <!-- Error Label -->
            <Label fx:id="errorLabel" managed="false" styleClass="error-label" text="Incorrect password" visible="false" />

            <!-- Forgot Password Link -->
            <HBox alignment="CENTER_RIGHT">
                <Hyperlink fx:id="forgotPasswordLink" onAction="#handleForgotPassword" styleClass="forgot-link" text="forgot password?" />
            </HBox>

            <!-- Login Button -->
            <Button fx:id="loginButton" maxWidth="Infinity" onAction="#handleLogin" styleClass="auth-button" text="Log in" />
        </VBox>

        <Region VBox.vgrow="SOMETIMES" />
    </VBox>

    <!-- Right Side - Background Image -->
    <StackPane styleClass="auth-right" HBox.hgrow="ALWAYS" />

</HBox>
