<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox stylesheets="@../css/auth.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.birdsenger.controllers.SignupController">

    <!-- Left Side - Form with ScrollPane -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefWidth="650" style="-fx-background: #FFFFFF; -fx-background-color: #FFFFFF;" vbarPolicy="AS_NEEDED">
        <VBox alignment="TOP_LEFT" spacing="15" styleClass="auth-left">
            <padding>
                <Insets bottom="30" left="80" right="80" top="30" />
            </padding>

            <!-- Logo -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <VBox prefHeight="40" prefWidth="40" styleClass="logo-circle" />
                <Label styleClass="logo-text" text="BirdSenger app." />
            </HBox>

            <Region prefHeight="5" />

            <!-- Title -->
            <VBox spacing="12">
                <Label styleClass="start-free" text="START FOR FREE" />
                <Text styleClass="auth-title" text="Create new account" />
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label styleClass="auth-subtitle" text="Already A Member?" />
                    <Hyperlink fx:id="loginLink" onAction="#handleLogin" styleClass="auth-link" text="Log In" />
                </HBox>
            </VBox>

            <!-- Form Fields -->
            <VBox spacing="12" styleClass="form-container">
                <!-- Name Fields -->
                <HBox spacing="15">
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="First name" />
                        <TextField fx:id="firstNameField" promptText="Fariba" styleClass="auth-field" />
                    </VBox>
                    <VBox spacing="6" HBox.hgrow="ALWAYS">
                        <Label styleClass="field-label" text="Last name" />
                        <TextField fx:id="lastNameField" promptText="Tanzim" styleClass="auth-field" />
                    </VBox>
                </HBox>

                <!-- Email -->
                <VBox spacing="6">
                    <Label styleClass="field-label" text="Email" />
                    <TextField fx:id="emailField" promptText="fariba.tanzim@proton.me" styleClass="auth-field" />
                </VBox>

                <!-- Username -->
                <VBox spacing="6">
                    <Label styleClass="field-label" text="Username" />
                    <TextField fx:id="usernameField" promptText="fariba.tanzim" styleClass="auth-field" />
                </VBox>

                <!-- Password Fields -->
                <VBox spacing="6">
                    <Label styleClass="field-label" text="Password" />
                    <PasswordField fx:id="passwordField" promptText="••••••••••••••••" styleClass="auth-field" />
                </VBox>

                <VBox spacing="6">
                    <Label styleClass="field-label" text="Confirm Password" />
                    <PasswordField fx:id="confirmPasswordField" promptText="••••••••••••••••" styleClass="auth-field" />
                </VBox>

                <!-- Security Question -->
                <VBox spacing="6">
                    <Label styleClass="field-label" text="Security Question" />
                    <ComboBox fx:id="securityQuestionCombo" maxWidth="Infinity" styleClass="auth-field" />
                </VBox>

                <!-- Security Answer -->
                <VBox spacing="6">
                    <Label styleClass="field-label" text="Answer" />
                    <TextField fx:id="securityAnswerField" promptText="Your answer" styleClass="auth-field" />
                </VBox>

                <!-- Message Label -->
                <Label fx:id="messageLabel" managed="false" styleClass="success-label" text="" visible="false" />

                <!-- Create Account Button -->
                <Button fx:id="createAccountButton" maxWidth="Infinity" onAction="#handleCreateAccount" styleClass="auth-button" text="Create account">
                    <VBox.margin>
                        <Insets bottom="10" top="5" />
                    </VBox.margin>
                </Button>
            </VBox>
        </VBox>
    </ScrollPane>

    <!-- Right Side - Background Image -->
    <StackPane styleClass="auth-right" HBox.hgrow="ALWAYS" />

</HBox>
